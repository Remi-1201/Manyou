<h1>管理者画面</h1>
<br>
<div class="container">
  <%= link_to 'Make new user', new_admin_user_path, class:"button_link" %><br><br>  

  <div class="notifications">
    <div class="notice">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
  <div class="danger"><%= flash[:danger] %></div>

  <div class="users">
    <table>
      <% @users.each do |user| %>
        <tr>
          <th class = "user_all">
            <%= link_to user.name, user_path(user.id) %>
          </th>
          <th class = "task_count">
            タスク数:&nbsp;<%= user.tasks.count %>
          </th>
          <th class = "role">
            管理権:&nbsp;<%= user.admin%>
          </th>
          <th colspan="2", class = "user_option">
            <td><%= button_to 'Edit', edit_admin_user_path(user.id), method: :get, class:"button" %></td>
            <td><%= button_to 'Destroy', admin_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"button" %></td>
          </th>
        </tr>
      <% end %>
    </table>
  </div>
</div>
  <% if @users.present? %>
    <div class="page">
      <%= paginate @users %>
    </div>
  <% end %>
<br><br>