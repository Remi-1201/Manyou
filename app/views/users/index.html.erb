<h1>Users</h1>
<div class="notifications">
 <div class="notice">
  <p id="notice"><%= notice %></p>
  </div>
</div>

<table class="user_index">
  <thead>
    <tr>
      <th class="user_th1">Name</th>
      <th class="user_th2">Email</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td class="user_email"><%= user.email %></td>        
        <% if current_user.id == user.id %>
        <td class="user_td1"><%= link_to 'Show', user , class:"button" %></td>
        <td class="user_td1"><%= link_to 'Edit', edit_user_path(user) , class:"button" %></td>
        <td class="user_td1"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class:"button" %></td>
        <% end %>          
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= button_to 'New User', new_user_path , method: :get, class:"button_link" %>
<%= link_to 'Back',user_path(current_user.id),class:"button_link" %> 
<br><br><br>
