<%= form_with(model: @task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
          <% task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
<br>
  <div class="field">
      <p> <%= form.label :priority %> </p>
      <p><%= form.select :priority, [['高'], ['中'], ['低']], {}, { id: "priority", class: "priority" } %></p>
  </div>  
    <div class="field">
      <p> <%= form.label :status %> </p>
      <p><%= form.select :status, [['未'], ['中'], ['済']], {}, { id: "status", class: "status" } %></p>
  </div>  

  <div class="field">
      <p> <%= form.label :name %> </p>
      <p><%= form.text_field :name %> </p>
  </div>
  <div class="field">
      <p> <%= form.label :detail %> </p>
      <p><%= form.text_area :detail, size: "23x5" %> </p>
  </div> 
  <div class="field">
      <p> <%= form.label :deadline %> </p>
      <p><%= form.date_select :deadline %> </p>
  </div>   
  <br>
  <div class="actions">
    <%= form.submit %>
  </div>
  <br>
<% end %>